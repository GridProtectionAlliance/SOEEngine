<Window x:Class="openXDAManager.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AboutWindow" Height="500" Width="620" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <RichTextBox Name="AboutTextBox" Grid.Row="0" Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" IsReadOnly="True" Loaded="AboutTextBox_Loaded" VerticalScrollBarVisibility="Auto" />
        <Button Grid.Row="1" Width="70" HorizontalAlignment="Center" Margin="10" Content="OK" Click="OkButton_Click" />
    </Grid>
</Window>
